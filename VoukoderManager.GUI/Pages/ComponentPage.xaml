<Page x:Class="VoukoderManager.GUI.ComponentPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:VoukoderManager.GUI"
      mc:Ignorable="d"
      d:DesignHeight="450" d:DesignWidth="800"
      Title="InstalledPage">

    <Grid>
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel x:Name="stackpanelPrograms" Margin="20" HorizontalAlignment="Left">
                <ItemsControl ItemsSource="{Binding VoukoderItemControls}" />
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>